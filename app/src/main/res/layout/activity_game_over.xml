<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_light_2"
    tools:context=".Game">

    <ImageButton
        android:id="@+id/btn_replay"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="112dp"
        android:layout_marginEnd="8dp"
        android:background="@drawable/white_round_corners_button"
        android:elevation="4dp"
        app:layout_constraintEnd_toStartOf="@+id/btn_home"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_game_over_text2"
        app:srcCompat="@drawable/replay" />

    <ImageButton
        android:id="@+id/btn_home"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_marginTop="112dp"
        android:background="@drawable/white_round_corners_button"
        android:elevation="4dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/btn_replay"
        app:layout_constraintTop_toBottomOf="@+id/static_game_over_text2"
        app:srcCompat="@drawable/home" />

    <TextView
        android:id="@+id/static_game_over_text1"
        android:layout_width="201dp"
        android:layout_height="78dp"
        android:layout_marginTop="112dp"
        android:text="YOU GOT"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textSize="48sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/wrong_count"
        android:layout_width="179dp"
        android:layout_height="93dp"
        android:text="0"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textSize="72sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/static_game_over_text1"
        tools:text="0" />

    <TextView
        android:id="@+id/static_game_over_text2"
        android:layout_width="335dp"
        android:layout_height="90dp"
        android:layout_marginTop="16dp"
        android:text="QUESTIONS WRONG"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Display4"
        android:textSize="32sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/wrong_count" />

</androidx.constraintlayout.widget.ConstraintLayout>