<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/gradient_background_dark"
    tools:context=".Pronunciation">

    <ImageButton
        android:id="@+id/recordButton"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="104dp"
        android:background="@drawable/white_round_corners_button"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.7"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/ic_baseline_mic_24px" />

    <ImageButton
        android:id="@+id/play"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginBottom="100dp"
        android:background="@drawable/white_round_corners_button"
        android:elevation="4dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.339"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/play_arrow" />

    <TextView
        android:id="@+id/character_text_bg"
        android:layout_width="279dp"
        android:layout_height="231dp"
        android:layout_marginTop="40dp"
        android:background="@drawable/game_character"
        android:textAlignment="center"
        android:textColor="#FAE7E0"
        android:textSize="36sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/character_text"
        android:layout_width="193dp"
        android:layout_height="165dp"
        android:animateLayoutChanges="true"
        android:textAlignment="center"
        android:textSize="120sp"
        app:layout_constraintBottom_toBottomOf="@+id/character_text_bg"
        app:layout_constraintEnd_toEndOf="@+id/character_text_bg"
        app:layout_constraintStart_toStartOf="@+id/character_text_bg"
        app:layout_constraintTop_toTopOf="@+id/character_text_bg" />

</android.support.constraint.ConstraintLayout>